<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}VEX IQ EVENT TEAMS' INFO{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="mh-100" style="width: 90%;">
            <div class="row mh-100">
                <div class="col-lg-6 mh-100">
                    <div class="btn-group mh-100">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            VEX IQ Tournaments
                        </button>
                        <div class="dropdown-menu">
                            {% for code, name in events %}
                                <a class="dropdown-item" href="#" onclick="load_home('https://www.robotevents.com/robot-competitions/vex-iq-challenge/{{ code }}.html', '/vex/iq/team_list/{{ code }}', '{{ name }}')">{{ name }}</a>
                            {% endfor %}
                        </div>
                    </div>
                    <script>
                        function load_home(vex_url, url, name) {
                            document.getElementById("event_link").innerHTML = name + " permanent link";
                            document.getElementById("event_link").setAttribute("href", url);
                            document.getElementById("vex_event_link").innerHTML = name + " VEX event link";
                            document.getElementById("vex_event_link").setAttribute("href", vex_url);
                            document.getElementById("content").innerHTML = '<object class="row mh-100" type="text/html" data="' + url + '" width="90%" height="4000 px"></object>';
                        }
                    </script>

                </div>
                <div class="col-lg-6 mh-100"></div>
            </div>
            <div class="row mh-100">
                <a id='event_link' href=""></a>
            </div>
            <div class="row mh-100">
                <a id='vex_event_link' href=""></a>
            </div>
            <div class="row mh-100">
                <div class="w-100 p-3 mh-100" id='content'></div>
            </div>
        </div>

    </body>
</html>
